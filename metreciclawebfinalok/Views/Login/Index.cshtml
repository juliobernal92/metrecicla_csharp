@model MetReciclaWebFinalOK.Models.LoginModel
@{
    Layout = "_LayoutLogin";
}
@{
    ViewData["Title"] = "Inicie Sesion";
}
<section class="vh-140" style=" ">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://i.imgur.com/CkHrkBC.jpeg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post" asp-action="HandleLogin">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <img src="img/logo.png" />
                                        <span class="h1 fw-bold mb-0" style="margin-left: 1em;">MET RECICLA</span>

                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresa a tu cuenta</h5>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="cedula" class="form-control form-control-lg" asp-for="Cedula" />
                                        <label class="form-label" for="cedula">Numero de Cedula</label>
                                        <span asp-validation-for="Cedula" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="pass" class="form-control form-control-lg" asp-for="Contraseña" />
                                        <label class="form-label" for="pass">Contraseña</label>
                                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Ingresar</button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        No tienes una cuenta?
                                        <a asp-action="Create" style="color: #393f81;">Crear Cuenta</a>
                                    </p>
                                    </p>

                                    <div asp-validation-summary="All" class="text-danger"></div>


                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>