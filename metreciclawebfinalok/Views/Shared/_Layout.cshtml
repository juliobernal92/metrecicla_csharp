<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Met Recicla</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MetReciclaWebFinalOK.styles.css" asp-append-version="true" />
    <!-- Agrega jQuery y Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Agrega Bootstrap CSS y el tema de Bootstrap Datepicker -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.standalone.min.css">

    <!-- Agrega el script de Bootstrap Datepicker y el idioma en español -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.es.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!--========== BOX ICONS ==========-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!--========== CSS ==========-->
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/site.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">



</head>
<body>

    <!--========== HEADER ==========-->
    <header class="header">
        <div class="header__container">


            <a href="#" class="text-dark"><h3>Met Recicla</h3></a>



            <div class="header__toggle">
                <i class='bx bx-menu' id="header-toggle"></i>
            </div>
        </div>
    </header>

    <!--========== NAV ==========-->
    <div class="nav" id="navbar">
        <nav class="nav__container">
            <div>
                <a href="#" class="nav__link nav__logo">
                    <img src="~/img/logo32.png" />
                    <span class="nav__logo-space"></span>
                    <span class="nav__logo-name">Met Recicla</span>
                </a>

                <div class="nav__list">
                    <div class="nav__items">
                        <h3 class="nav__subtitle">Dashboard</h3>

                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav__link">
                            <i class='bx bx-home nav__icon'></i>
                            <span class="nav__name">Inicio</span>
                        </a>

                        <a asp-area="" asp-controller="GenerarTicketCompra" asp-action="Index" class="nav__link">
                            <i class='bx bxs-data nav__icon'></i>
                            <span class="nav__name">Compras</span>
                        </a>


                        <a asp-area="" asp-controller="Empleados" asp-action="Index" class="nav__link">
                            <i class='bx bx-text nav__icon'></i>
                            <span class="nav__name">Empleados</span>
                        </a>

                        <a asp-area="" asp-controller="Chatarra" asp-action="Index" class="nav__link">
                            <i class='bx bxl-visual-studio nav__icon'></i>
                            <span class="nav__name">Chatarra</span>
                        </a>

                        <a asp-area="" asp-controller="Vendedores" asp-action="Index" class="nav__link">
                            <i class='bx bxs-info-square nav__icon'></i>
                            <span class="nav__name">Vendedores</span>
                        </a>
                    </div>



                    <a asp-area="" asp-controller="Login" asp-action="Index" class="nav__link nav__logout">
                        <i class='bx bx-log-out nav__icon'></i>
                        <span class="nav__name">Cerrar Sesion</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align: center;">
            &copy; 2023 - Met Recicla
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
